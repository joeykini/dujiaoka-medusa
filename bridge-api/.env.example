# 基本配置
PORT=3001
NODE_ENV=development

# 資料庫配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=dujiaoka

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# JWT配置
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# 獨角數卡配置
DUJIAOKA_URL=http://localhost/admin
DUJIAOKA_API_KEY=your_dujiaoka_api_key

# 支付配置 - PayJS
PAYJS_MCHID=your_payjs_mchid
PAYJS_KEY=your_payjs_key
PAYJS_NOTIFY_URL=https://your-domain.com/api/payments/callback/payjs
PAYJS_RETURN_URL=https://your-domain.com/payment/success

# 支付配置 - 支付寶
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key
ALIPAY_GATEWAY=https://openapi.alipay.com/gateway.do
ALIPAY_NOTIFY_URL=https://your-domain.com/api/payments/callback/alipay
ALIPAY_RETURN_URL=https://your-domain.com/payment/success

# 支付配置 - 微信支付
WECHAT_APP_ID=your_wechat_app_id
WECHAT_MCH_ID=your_wechat_mch_id
WECHAT_API_KEY=your_wechat_api_key
WECHAT_NOTIFY_URL=https://your-domain.com/api/payments/callback/wechat
WECHAT_RETURN_URL=https://your-domain.com/payment/success

# 支付配置 - 易支付
EPAY_PID=your_epay_pid
EPAY_KEY=your_epay_key
EPAY_API_URL=https://your-epay-domain.com/submit.php
EPAY_NOTIFY_URL=https://your-domain.com/api/payments/callback/epay
EPAY_RETURN_URL=https://your-domain.com/payment/success

# 郵件配置
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=your_email@gmail.com

# 文件上傳配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# 日誌配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS配置
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# 快取配置
CACHE_TTL=3600
CACHE_PREFIX=dujiaoka:

# 監控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 其他配置
TIMEZONE=Asia/Shanghai
DEFAULT_LANGUAGE=zh-CN
DEBUG=false

# 碼支付配置
CODEPAY_ID=your_id
CODEPAY_KEY=your_key
CODEPAY_API_URL=https://api.xiuxiuapi.com
CODEPAY_NOTIFY_URL=http://your-domain.com/api/payments/callback/codepay
CODEPAY_RETURN_URL=http://your-domain.com/payment/success

# V免簽配置
VMQPAY_KEY=your_key
VMQPAY_API_URL=http://your-vmqpay-domain.com

# 前端配置
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:8000 