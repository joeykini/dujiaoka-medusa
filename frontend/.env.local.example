# API配置
BRIDGE_API_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001

# 網站配置
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NEXT_PUBLIC_SITE_NAME=獨角數卡商城
NEXT_PUBLIC_SITE_DESCRIPTION=專業的數位商品銷售平台

# 支付配置
NEXT_PUBLIC_ENABLE_ALIPAY=true
NEXT_PUBLIC_ENABLE_WECHAT=true
NEXT_PUBLIC_ENABLE_PAYJS=true

# 分析配置
NEXT_PUBLIC_GOOGLE_ANALYTICS=your_ga_id
NEXT_PUBLIC_BAIDU_ANALYTICS=your_baidu_id

# 地圖配置
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_key

# 社交媒體配置
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
NEXT_PUBLIC_TWITTER_HANDLE=@your_twitter

# 客服配置
NEXT_PUBLIC_CUSTOMER_SERVICE_URL=https://your-customer-service.com
NEXT_PUBLIC_QQ_GROUP=123456789
NEXT_PUBLIC_WECHAT_GROUP=your_wechat_group_qr

# 上傳配置
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif

# 功能開關
NEXT_PUBLIC_ENABLE_REGISTRATION=true
NEXT_PUBLIC_ENABLE_GUEST_CHECKOUT=true
NEXT_PUBLIC_ENABLE_WISHLIST=true
NEXT_PUBLIC_ENABLE_REVIEWS=true

# 主題配置
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# 語言配置
NEXT_PUBLIC_DEFAULT_LOCALE=zh-TW
NEXT_PUBLIC_AVAILABLE_LOCALES=zh-TW,zh-CN,en

# 快取配置
NEXT_PUBLIC_CACHE_TIMEOUT=300000

# 調試配置
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_SHOW_CONSOLE_LOGS=false 